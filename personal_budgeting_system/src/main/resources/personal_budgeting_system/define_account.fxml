<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="personal_budgeting_system.DefineAccountController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" maxWidth="300.0"
              AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0" 
              AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>
                <Label text="Enter Your Information" />
                <Label text="Name:" />
                <TextField fx:id="nameField" promptText="Name" />
                
                <Label text="Email:" />
                <TextField fx:id="emailField" promptText="Email" />
                
                <Label text="Password:" />
                <TextField fx:id="passwordField" promptText="Password" />
                <Button fx:id="backButton" text="Back"/>
            </children>
        </VBox>
    </children>
</AnchorPane>